@model MainModel
<section class="blog_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Z naszego bloga
            </h2>
        </div>
        <div class="row">

            @foreach (var post in Model.LatestPosts)
            {
                <div class="col-md-6">
                    <div class="box">
                        <div class="img-box">
                            <img src="~/@post.Icon" alt="">
                            <h4 class="blog_date">
                                <span>
                                    @post.CreateDate
                                </span>
                            </h4>
                        </div>
                        <div class="detail-box">
                            <h5>
                                @post.Name
                            </h5>
                            <p>
                                @post.Description
                            </p>
                            <a asp-controller="Posts" asp-action="Index" asp-route-id="@post.Id">
                                Czytaj dalej
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>