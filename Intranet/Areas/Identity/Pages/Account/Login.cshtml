@page
@model LoginModel

@{
    ViewData["Title"] = "Logowanie";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" >
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/Intranet.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/fontello.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/reset.css" asp-append-version="true" />
    <style>
        a:hover {
            color: white;
        }

        .alert {
            margin-bottom: 0 !important;
            position: absolute;
            width: 100vw;
        }
    </style>
</head>
<body>

<div style="width: 100vw; height: 100vh" class="flex justify-center items-center">
    <div class="w-fit">
        <form id="account" method="post" class="flex flex-col gap-8 items-center">

            <img src="~/images/shield_icon.png" alt="" style="width: 90px;" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.UserName"  autocomplete="username" aria-required="true" placeholder="Login"
                       class="border rounded-sm px-3 py-2"/>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password"  autocomplete="current-password" aria-required="true" placeholder="Hasło"
                                class="border rounded-sm px-3 py-2"/>
            </div>
            <div>
                <div class="">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe"/>
                       Zapamiętaj mnie
                    </label>
                </div>
            </div>
            <div>
                <button id="login-submit" type="submit" class="border-2 border-amber-500 rounded-md  uppercase py-2 px-4
                    hover:cursor-pointer hover:bg-amber-500 hover:text-neutral-50 ">Zaloguj</button>
            </div>
        </form>
    </div>
</div>

</body>

</html>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

